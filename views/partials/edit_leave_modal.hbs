
<div class="modal fade" id="{{container_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    <form method="POST" action="{{leave_modal_form_action}}" enctype="multipart/form-data">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="xampleModalLabel" style="color:red;">Edit Leave (Shorten leave days)</span></h4>
        
      </div>
      <div class="modal-body">
          <div class="form-group">
            <label>Leave type:</label>
            <div id="edit_leave_type" name="edit_leave_type" style="font-size:16px">xyz</div> 
            <div style="font-size:12px;color:red">* Contact your HR or Supervisor to ammend this.</div>
          </div>

          <div class="form-group">
            <label for="from" class="control-label">From:</label>
            <div class="row">
              <div class="col-md-5">
                <select class="form-control" name="edit_from_date_part">
                  <option value="1" selected="selected">All day</option>
                  <option value="2">Morning</option>
                  <option value="3">Afternoon</option>
                </select>
              </div>
              <div class="col-md-7">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  <input type="text" class="form-control edit-book-leave-from-input" id="edit_from" autocomplete="off"  data-date-autoclose="1" data-date-format="{{#with logged_user.company }}{{this.get_default_date_format_for_date_picker}}{{/with}}" value="" name="edit_from_date">
                  <input type="hidden" name="edit_bank_holiday" id="edit_bank_holiday" value="[{{#each logged_user.company.bank_holidays}}{'name':'{{escape this.name}}', 'dt':'{{as_date_formatted this.date 'YYYY-M-DD'}}'}{{#unless @last}},{{/unless}}{{/each}}]">
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="to" class="control-label">To:</label>
            <div class="row">
              <div class="col-md-5">
                <select class="form-control" name="edit_to_date_part">
                  <option value="1" selected="selected">All day</option>
                  <option value="2">Morning</option>
                  <option value="3">Afternoon</option>
                </select>
              </div>
              <div class="col-md-7">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  <input type="text" class="form-control edit-book-leave-to-input" id="edit_to" autocomplete="off"  data-date-autoclose="1" data-date-format="{{#with logged_user.company }}{{this.get_default_date_format_for_date_picker}}{{/with}}" value="" name="edit_to_date">
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="leave_type" class="control-label">Reason:</label>            
            <textarea class="form-control" rows="4" name="edit_employee_comment" id="edit_employee_comment" placeholder="Enter reason here..."></textarea>
          </div>
          
          <div class="form-group" id="edit_attachment-inp_div">
            <label for="attachment-inp" class="control-label">Replace Attachment:</label>
            <input type="file" class="form-control-file" id="edit_attachment-inp" name="edit_attachment"></input>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Edit</button>
        {{# if redirect_back_to }}
          <input type="hidden" name="edit_redirect_back_to" value="{{redirect_back_to}}">
        {{else}}
          <input type="hidden" name="edit_redirect_back_to" value="{{requested_path}}">
        {{/if}}
      </div>
    </form>
    </div>
  </div>
</div>
